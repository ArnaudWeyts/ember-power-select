<input type="text" placeholder="Focus me and press TAB to focus the select" style="line-height: 2; width: 100%">
<br>
<br>
<PowerSelectMultiple
  @selected={{selected}}
  @options={{cities}}
  @onChange={{action (mut selected)}}
  @onFocus={{action "handleFocus"}}
  @onBlur={{action "handleBlur"}} as |name|>
  {{name}}
</PowerSelectMultiple>